<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ (title is defined)?title:'homepage'|trans }}</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width">
    {% block stylesheets %}
        {% stylesheets debug=false filter='lessphp, cssmin' output='/assets/css/bootstrap.css'
            '../src/StapsSurvey/Resources/assets/less/bootstrap.less'
        %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
        {% stylesheets debug=false filter='lessphp, cssmin' output='/assets/css/font-awesome.css'
            '../bower_components/font-awesome/css/font-awesome.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% image debug=false output='/assets/font/FontAwesome.otf'
            '../bower_components/font-awesome/font/FontAwesome.otf' %}
        {% endimage %}
        {% image debug=false output='/assets/font/fontawesome-webfont.eot'
            '../bower_components/font-awesome/font/fontawesome-webfont.eot' %}
        {% endimage %}
        {% image debug=false output='/assets/font/fontawesome-webfont.svg'
            '../bower_components/font-awesome/font/fontawesome-webfont.svg' %}
        {% endimage %}
        {% image debug=false output='/assets/font/fontawesome-webfont.ttf'
            '../bower_components/font-awesome/font/fontawesome-webfont.ttf' %}
        {% endimage %}
        {% image debug=false output='/assets/font/fontawesome-webfont.woff'
            '../bower_components/font-awesome/font/fontawesome-webfont.woff' %}
        {% endimage %}
    {% endblock %}

    {% block javascripts_header %}
        {% javascripts filter='jsmin' output='/assets/js/modernizr.js'
            '../bower_components/modernizr/modernizr.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

</head>
<body>
    <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

    <div class="container">
        <div id="main" role="main">
            {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
            {% for alert in alertTypeAvaillable %}
                {% for message in app.session.getFlashBag.get(alert) %}
                    <div class="alert alert-{{ alert }}" >
                        <button class="close" data-dismiss="alert">Ã—</button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}
            {% endblock %}
        </div>
    </div>
    {% block javascripts %}
        {% javascripts debug=false filter='jsmin' output='/assets/js/jquery.js'
        '../bower_components/jquery/dist/jquery.min.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>